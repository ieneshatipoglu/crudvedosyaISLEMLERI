@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <form asp-action="Login" method="post">
        <div class="form-group row mb-3">
            <label for="KullaniciAdi" class="col-sm-2 col-form-label mt-2">Kullanıcı Adı :</label>
            <div class="col-sm-10">
                <input name="KullaniciAdi" class="form-control" placeholder="Kullanıcı Adını Giriniz" />
            </div>
        </div>
        <div class="form-group row mb-3">
            <label for="Sifre" class="col-sm-2 col-form-label">Şifre :</label>
            <div class="col-sm-10">
                <input name="Sifre" type="password" class="form-control" placeholder="Şifreyi Giriniz" />
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
        </div>

        @if (ViewBag.Hata != null)
        {
            <div class="alert alert-danger mt-3">@ViewBag.Hata</div>
        }
    </form>
</div>
