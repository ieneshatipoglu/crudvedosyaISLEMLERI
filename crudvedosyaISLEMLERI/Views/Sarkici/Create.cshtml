@model crudvedosyaISLEMLERI.Models.Sarki
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="SarkiAdi">Şarkı Adı</label>
        <input asp-for="SarkiAdi" class="form-control" placeholder="Şarkı Adını Giriniz" />
    </div>

    <div class="form-group">
        <label asp-for="SarkicininAdi">Şarkıcının Adı</label>
        <input asp-for="SarkicininAdi" class="form-control" placeholder="Şarkıcının Adını Giriniz" />
    </div>

    <div class="form-group">
        <label>Şarkı Resmi / Dosya</label>
        <input type="file" name="dosya" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success ">Ekle</button>
</form>
